{% block report %}
    <div class="row">
        <div class="col-lg-12">
            <button type="button" id="usagestats" class="btn btn-outline-primary" title="{{ 'Show usage stats by day.'|trans }}">
                <span class="fas fa-road"></span> {{ 'Daily stats'|trans }}
            </button>
            <button type="button" id="userstats" class="btn btn-outline-primary" title="{{ 'Show user stats.'|trans }}">
                <span class="fas fa-road"></span> {{ 'User stats'|trans }}
            </button>
            <div id="reportsconsole">
                <div class="row">
                    <div class="col-12">
                        <table id="report-daily-table" class="table table-striped table-bordered d-none" style="width:100%">
                            <thead>
                            <tr>
                                <th>{{ 'Day'|trans }}</th>
                                <th>{{ 'Rent'|trans }}</th>
                                <th>{{ 'Return'|trans }}</th>
                            </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                        <div class="form-group row d-none" id="report-user-year">
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="year">{{ 'Year'|trans }}</label>
                                    </div>
                                    <select id="year" class="form-control col-md-3">
                                        <option value="" disabled selected>{{ 'Select Year'|trans }}</option>
                                        {% for year in currentYear..2014 %}
                                            <option value="{{ year }}" {% if currentYear == year %}selected{% endif %}>{{ year }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <table id="report-user-table" class="table table-striped table-bordered d-none" style="width:100%">
                            <thead>
                            <tr>
                                <th>{{ 'User'|trans }}</th>
                                <th>{{ 'Rents'|trans }}</th>
                                <th>{{ 'Returns'|trans }}</th>
                                <th>{{ 'Total Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}