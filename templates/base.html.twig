<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ siteName }}{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('favicon-96x96.png') }}" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}" />
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}" />
    <meta name="apple-mobile-web-app-title" content="{{ block('title') }}" />
    <link rel="manifest" href="{{ asset('site.webmanifest') }}" />
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">
        <img src="{{ asset('images/logo_small.svg') }}" width="30" height="30" class="d-inline-block align-top" alt="Logo">
        {{ siteName }}
    </a>
    {% block cities %}{% endblock %}

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            {% block menuItems %}
                <li class="nav-item">
                    <a class="nav-link" href="https://wiki.whitebikes.info/index.php/Ako_to_funguje%3F">
                        <i class="fas fa-info-circle mr-1"></i>{{ 'How it works'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://wiki.whitebikes.info/index.php/Ako_sa_zapoj%C3%ADm%3F">
                        <i class="fas fa-hands-helping mr-1"></i>{{ 'Get Involved'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://wiki.whitebikes.info/index.php/Nie%C4%8Do_mi_nejde">
                        <i class="fas fa-question-circle mr-1"></i>{{ 'Help'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://wiki.whitebikes.info/index.php/Podrobn%C3%BD_manu%C3%A1l">
                        <i class="fas fa-book mr-1"></i>{{ 'Manual'|trans }}
                    </a>
                </li>
            {% endblock %}
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-globe"></i> {{ app.request.locale|upper }}
                </a>
                <div class="dropdown-menu" aria-labelledby="languageDropdown">
                    {% set language_names = {
                        'en': 'English',
                        'sk': 'Slovenčina',
                        'cs': 'Čeština',
                        'de': 'Deutsch',
                        'ua': 'Українська'
                    } %}
                    {% for locale in enabled_locales %}
                        <a class="dropdown-item" href="{{ path('switch_language', {locale: locale}) }}">{{ language_names[locale] ?? locale|upper }}</a>
                    {% endfor %}
                </div>
            </li>
            {% block userMenuItems %}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}">
                            <i class="fas fa-sign-out-alt mr-1"></i>{{ 'Logout'|trans }} ({{ app.user.username }})
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">
                            <i class="fas fa-sign-in-alt mr-1"></i>{{ 'Log in'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">
                            <i class="fas fa-user-plus mr-1"></i>{{ 'Registration'|trans }}
                        </a>
                    </li>
                {% endif %}
            {% endblock %}
        </ul>
    </div>
</nav>

{% block bodyContainer %}
<div class="container flex-grow-1">
    {% block body %}{% endblock %}
</div>
{% endblock %}

<footer class="footer mt-auto">
    <div class="card">
        <div class="card-footer">
            <div>
                <i class="fas fa-copyright"></i> {{ "now"|date("Y") }} <a href="{{ path('home') }}">{{ siteName }}</a>
            </div>
            <div>
                <strong>{{ 'Privacy policy:'|trans }}</strong> {{ 'We will use your details for'|trans }} {{ siteName }} - {{ 'related activities only'|trans }}.
            </div>
        </div>
    </div>
</footer>

<script src="//code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
<script src="//stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% if googleAnalyticsId is not empty %}
    {% include ('google.analytics.html.twig') %}
{% endif %}
{% block scripts %}
    <script>
        window.translations = {};
        fetch('{{ path('js_translations') }}')
            .then(response => response.json())
            .then(data => {
                window.translations = data;
            });
    </script>
{% endblock %}
</body>
</html>
